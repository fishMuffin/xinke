<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xkyz.xinke.mapper.UserAddressMapper">
    <select id="getUserAddressByAddressId" resultType="UserAddress" parameterType="int">
        SELECT *
        from user
        where address_id = #{addressId}
    </select>
    <select id="getUserAddressListByUserId" resultType="list" parameterType="int">
        SELECT *
        from user_address
        where user_id = #{userId}
    </select>


    <insert id="addUserAddress" parameterType="UserAddress">
        insert into user_address(province, city, district, address_detail, user_id)
        values (#{province}, #{city}, #{district}, #{addressDetail}, #{userId})

    </insert>
    <delete id="deleteUserAddressByAddressId" parameterType="UserAddress">
        delete
        from user_address
        where address_id = #{addressId}
    </delete>

    <update id="updateUserAddressByAddressId" parameterType="UserAddress">
        update user_address
        set province=#{province},
            city=#{city},
            district=#{district},
            address_detail=#{addressDetail}
        where address_id = #{addressId};
    </update>

</mapper>